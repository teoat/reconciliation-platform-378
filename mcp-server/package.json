    "execa": "^8.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "lru-cache": "^10.4.3",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "simple-git": "^3.20.0",
    "systeminformation": "^5.21.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.45",
