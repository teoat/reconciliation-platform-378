# Better Auth Configuration for Backend

# Better Auth Server URL
BETTER_AUTH_SERVER_URL=http://localhost:4000

# Enable Better Auth (set to true when ready to switch)
BETTER_AUTH_ENABLED=false

# Enable dual mode (support both legacy JWT and Better Auth during migration)
BETTER_AUTH_DUAL_MODE=true

# Token cache TTL in seconds (default: 300 = 5 minutes)
BETTER_AUTH_CACHE_TTL=300

# JWT Configuration (must match auth-server)
JWT_SECRET=your-jwt-secret-must-match-auth-server

# Database URL (same as existing)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/reconciliation

