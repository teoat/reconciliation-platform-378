{
  "mcpServers": {
    "antigravity-coordination": {
      "command": "node",
      "args": [
        "${PROJECT_ROOT}/mcp-server/dist/agent-coordination.js"
      ],
      "env": {
        "NODE_ENV": "development",
        "REDIS_URL": "redis://:redis_pass@localhost:6379",
        "COORDINATION_TTL": "3600",
        "PROJECT_ROOT": "/Users/Arief/Documents/GitHub/reconciliation-platform-378"
      }
    },
    "antigravity-frontend-diagnostics": {
      "command": "node",
      "args": [
        "${PROJECT_ROOT}/mcp-server/frontend-diagnostics/dist/index.js"
      ],
      "env": {
        "PROJECT_ROOT": "/Users/Arief/Documents/GitHub/reconciliation-platform-378",
        "FRONTEND_BASE_URL": "http://localhost:3000"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${PROJECT_ROOT}"
      ],
      "env": {}
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://postgres:postgres_pass@localhost:5432/reconciliation_app"
      ],
      "env": {}
    },
    "redis": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-redis",
        "redis://:redis_pass@localhost:6379"
      ],
      "env": {},
      "disabled": false,
      "alwaysAllow": []
    },
    "prometheus": {
      "command": "npx",
      "args": [
        "-y",
        "prometheus-mcp"
      ],
      "env": {
        "PROMETHEUS_URL": "http://localhost:9090",
        "PROMETHEUS_TIMEOUT": "10000",
        "PROMETHEUS_RETRIES": "3"
      },
      "disabled": false,
      "alwaysAllow": []
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "env": {}
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {}
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {}
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {}
    }
  }
}