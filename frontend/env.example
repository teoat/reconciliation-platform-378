# Better Auth Configuration
VITE_AUTH_SERVER_URL=http://localhost:4000

# Password Policy (Better Auth SSOT)
VITE_BCRYPT_COST=12
VITE_PASSWORD_MIN_LENGTH=8
VITE_PASSWORD_MAX_LENGTH=128
VITE_PASSWORD_EXPIRATION_DAYS=90
VITE_PASSWORD_INITIAL_EXPIRATION_DAYS=7
VITE_PASSWORD_HISTORY_LIMIT=5
VITE_PASSWORD_WARNING_DAYS=7

# Google OAuth (same as before)
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# API Configuration (existing)
VITE_API_BASE_URL=http://localhost:8080/api/v2
VITE_WS_URL=ws://localhost:2000

# Frontend OAuth Redirect URLs (must match backend configuration)
VITE_GOOGLE_OAUTH_REDIRECT_URL=http://localhost:3000/api/v2/auth/oauth/google/callback
VITE_GITHUB_OAUTH_REDIRECT_URL=http://localhost:3000/api/v2/auth/oauth/github/callback

# Feature Flags
VITE_USE_BETTER_AUTH=true

# Environment
VITE_ENV=development

# Optimizely Configuration
VITE_OPTIMIZELY_SDK_KEY=your-optimizely-sdk-key

