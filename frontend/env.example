# Frontend Environment Configuration
# Copy this file to .env.local and update the values as needed

# API Configuration
VITE_API_URL=http://localhost:2000/api
VITE_WS_URL=ws://localhost:2000

# Application Configuration
VITE_APP_NAME=Reconciliation Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REALTIME=true
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_AI_FEATURES=true

# Performance Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_UPLOAD_TIMEOUT=300000
VITE_API_TIMEOUT=30000

# Security Configuration
VITE_ENABLE_CSRF_PROTECTION=true
VITE_SESSION_TIMEOUT=3600000

# Development Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_ENABLE_MOCK_DATA=false

# Production Configuration (uncomment for production)
# VITE_API_URL=https://api.reconciliation-platform.com/api
# VITE_WS_URL=wss://api.reconciliation-platform.com
# VITE_APP_ENVIRONMENT=production
# VITE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error
# VITE_ENABLE_MOCK_DATA=false
