# Reconciliation Platform - Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local files to version control

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application
VITE_APP_NAME=Reconciliation Platform
VITE_APP_VERSION=1.0.0

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Backend API URL (must match backend server)
VITE_API_URL=http://localhost:2000/api

# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:2000

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================

# OAuth providers (optional)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GITHUB_CLIENT_ID=your-github-client-id

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true

# ============================================================================
# UI CONFIGURATION
# ============================================================================

# Theme
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Pagination
VITE_DEFAULT_PAGE_SIZE=25
VITE_MAX_PAGE_SIZE=100

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Analytics (optional)
VITE_GA_TRACKING_ID=your-google-analytics-id

# Error reporting (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Development helpers
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK_API=false
VITE_LOG_LEVEL=info

# ============================================================================
# BUILD CONFIGURATION
# ============================================================================

# Build optimization
VITE_ENABLE_SOURCEMAPS=false
VITE_ENABLE_COMPRESSION=true