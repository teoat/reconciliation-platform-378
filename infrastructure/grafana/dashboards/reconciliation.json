{
  "dashboard": {
    "title": "Reconciliation Platform - Production Dashboard",
    "panels": [
      {
        "title": "System Uptime (CFUR)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) / count(http_requests_total)",
            "legendFormat": "Uptime"
          }
        ],
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "red"},
            {"value": 0.98, "color": "yellow"},
            {"value": 0.998, "color": "green"}
          ]
        }
      },
      {
        "title": "API Latency (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 Latency"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99 Latency"
          }
        ]
      },
      {
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_errors_total[1m]) / rate(http_requests_total[1m])",
            "legendFormat": "Error Rate"
          }
        ]
      },
      {
        "title": "Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "RPS"
          }
        ]
      }
    ]
  }
}

