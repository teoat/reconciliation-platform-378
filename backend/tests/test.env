# Test Environment Configuration
# This file contains test-specific environment variables for the Reconciliation Backend

# Database Configuration
DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/reconciliation_test
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/reconciliation_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRATION=3600

# Server Configuration
HOST=127.0.0.1
PORT=3001

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Logging Configuration
LOG_LEVEL=debug
RUST_LOG=debug

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./test_uploads

# Test Data Configuration
TEST_DATA_PATH=./test_data
MOCK_DATA_ENABLED=true

# Performance Testing
PERFORMANCE_THRESHOLD_MS=1000
CONCURRENT_REQUESTS_LIMIT=100

# Security Testing
TEST_SECURITY_ENABLED=true
MOCK_AUTH_ENABLED=false

# Integration Testing
INTEGRATION_TEST_TIMEOUT=30
API_TEST_TIMEOUT=10

# Database Testing
TEST_DB_CLEANUP=true
TEST_DB_MIGRATIONS=true
TEST_DB_POOL_SIZE=5

# Mock Services
MOCK_REDIS_ENABLED=true
MOCK_FILE_SYSTEM=true
MOCK_EXTERNAL_APIS=true
