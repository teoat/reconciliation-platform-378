# Better Auth Server Configuration

# Server
PORT=4000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/reconciliation

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here-must-match-backend
JWT_EXPIRATION_SECONDS=1800

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback/google

# Password Configuration
BCRYPT_COST=12
PASSWORD_MIN_LENGTH=8
PASSWORD_EXPIRATION_DAYS=90

# Session Configuration
SESSION_EXPIRY_SECONDS=1800
REFRESH_TOKEN_EXPIRY_SECONDS=604800

# Redis (Optional - for distributed sessions)
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:2000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:2000

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info

