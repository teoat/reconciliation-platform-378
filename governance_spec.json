{
  "version": "1.0",
  "bvp": "Enable enterprise finance teams to reconcile multi-source data with 99.9% accuracy in 80% less time",
  "personas": ["financial_analyst", "data_engineer", "compliance_officer"],
  "cuj": ["standard_reconciliation", "bulk_reconciliation", "audit_review"],
  "thresholds": {
    "api_p95_ms": 200,
    "match_accuracy": 0.999,
